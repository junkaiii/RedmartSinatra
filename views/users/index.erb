<h2>Our esteemed users:</h2>
<style>
table {
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
<table>
<tr>
  <th>Name</th>
  <th>Email</th>
  <th>Address</th>
  <th>Delete User</th>
  <th>Edit User</th>
</tr>
<% @users.each do |user| %>
<tr>
  <td>
    <%= user[:'name'] %>
  </td>
  <td>
    <%= user[:'email'] %>
  </td>
  <td>
    <%= user[:'address'] %>
  </td>
  <td>
    <form action="/users/<%= user[:id] %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="delete">
    </form>
  </td>
  <td><a href="/users/<%= user[:id] %>/edit">Edit</a></td>
</tr>
<% end %>
</table>
<h3><a href="/users/new">Register Here!</a></h3>
